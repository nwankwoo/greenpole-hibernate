<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.greenpole.hibernate.entity.ClientCompanyAddress" table="CLIENT_COMPANY_ADDRESS" schema="dbo" catalog="greenpole" optimistic-lock="version">
        <composite-id name="id" class="org.greenpole.hibernate.entity.ClientCompanyAddressId">
            <key-property name="clientCompanyId" type="int">
                <column name="client_company_id" />
            </key-property>
            <key-property name="addressLine" type="string">
                <column name="address_line" length="500" />
            </key-property>
            <key-property name="lineNumber" type="int">
                <column name="line_number" />
            </key-property>
        </composite-id>
        <version name="versionId" type="long"/>
        <many-to-one name="clientCompany" class="org.greenpole.hibernate.entity.ClientCompany" update="false" insert="false" fetch="select">
            <column name="client_company_id" not-null="true" />
        </many-to-one>
        <property name="lineType" type="string">
            <column name="line_type" length="50" />
        </property>
        <property name="addressType" type="string">
            <column name="address_type" length="50" />
        </property>
    </class>
</hibernate-mapping>
