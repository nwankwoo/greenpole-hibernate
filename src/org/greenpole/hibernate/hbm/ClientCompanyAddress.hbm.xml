<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="org.greenpole.hibernate.entity.ClientCompanyAddress" table="CLIENT_COMPANY_ADDRESS" schema="dbo" catalog="greenpole" optimistic-lock="version">
        <composite-id name="id" class="org.greenpole.hibernate.entity.ClientCompanyAddressId">
            <key-property name="clientCompanyId" type="int">
                <column name="client_company_id" />
            </key-property>
            <key-property name="addressLine1" type="string">
                <column name="address_line_1" length="50" />
            </key-property>
            <key-property name="state" type="string">
                <column name="state" length="50" />
            </key-property>
            <key-property name="country" type="string">
                <column name="country" length="50" />
            </key-property>
        </composite-id>
        <version name="versionId" type="long"/>
        <many-to-one name="clientCompany" class="org.greenpole.hibernate.entity.ClientCompany" update="false" insert="false" fetch="select">
            <column name="client_company_id" not-null="true" />
        </many-to-one>
        <property name="addressLine2" type="string">
            <column name="address_line_2" length="50" />
        </property>
        <property name="addressLine3" type="string">
            <column name="address_line_3" length="50" />
        </property>
        <property name="addressLine4" type="string">
            <column name="address_line_4" length="50" />
        </property>
        <property name="postCode" type="string">
            <column name="post_code" length="50" />
        </property>
        <property name="city" type="string">
            <column name="city" length="50" />
        </property>
        <property name="isPrimary" type="boolean">
            <column name="is_primary" />
        </property>
    </class>
</hibernate-mapping>
